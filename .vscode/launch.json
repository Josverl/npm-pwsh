{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/npm_lifecycle_postinstall.ts",
            "protocol": "inspector",
            "runtimeArgs": [
                "--require", "ts-node/register/transpile-only", "--nolazy"
            ],
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "node_modules/tslib/**",
                "<node_internals>/async_hooks.js",
                "<node_internals>/internal/inspector_async_hook.js",
                "<node_internals>/internal/**",
                "<node_internals>/**"
            ]
        }
    ]
}
